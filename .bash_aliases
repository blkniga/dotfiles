#	Directory Movement
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

#	Git Commands
alias g="git"
alias ga="git add"
alias gc="git commit"
alias gp="git push"
alias gs="git status"
alias gr="git remote"
alias gl="git log"

alias ni="npm install"
alias nu="npm uninstall"
alias nri="rm -rf node_modules && npm install"

#	Misc
alias mv="mv -i"
alias cp="cp -i"
alias rr="rm -rf"

alias reload="source ~/.bashrc"

alias fp="fzf --preview 'batcat --style=numbers --color=always --line-range :500 {}'"
